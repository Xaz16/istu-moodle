<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/bacs_attendance_list/db" VERSION="20200714" COMMENT="XMLDB file for Moodle blocks/bacs_attendance_list"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>

    <TABLE NAME="block_bacs_attendance_list" COMMENT="Это главная таблица, содержит описания изменений во всех списках посещаемости.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Счетчик"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="ID курса"/>
        <FIELD NAME="content" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Содержимое изменений в JSON"/>
        <FIELD NAME="time_modified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Время последнего изменения списка"/>
        <FIELD NAME="last_modifier" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Последний изменивший список пользователь"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

  </TABLES>
</XMLDB>
